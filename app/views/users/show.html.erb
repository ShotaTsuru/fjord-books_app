<h1><%= t("views.common.title_user_show", name: @user.user_name) %></h1>
<div class="user_card">
  <div class="user_card_profile_box">
    <div class="label_box">
      <div class="profile label" id="user_name_label"><%= User.human_attribute_name(:user_name) %></div>
      <div class="profile" id="user_name"><%= @user.user_name %></div>
    </div>
    <div class="label_box">
      <div class="profile label" id="user_addrress_label"><%= User.human_attribute_name(:address) %></div>
      <div class="profile" id="user_addrress"><%= @user.address %></div>
    </div>
    <div class="label_box">
      <div class="profile label" id="user_email_label"><%= User.human_attribute_name(:email) %></div>
      <div class="profile" id="user_email"><%= @user.email %></div>
    </div>
    <div class="label_box">
      <div class="profile label" id="user_introduction_label"><%= User.human_attribute_name(:introduction) %></div>
      <div class="profile" id="user_introduction"><%= @user.introduction %></div>
    </div>
  </div>
</div>
<h2><%= t("views.common.already_posts", name: Book.model_name.human)%></h2>
<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:memo) %></th>
      <th><%= Book.human_attribute_name(:author) %></th>
      <th><%= Book.human_attribute_name(:picture) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('views.common.show'), book %></td>
        <% if current_user.id == @user.id %>
          <td><%= link_to t('views.common.edit'), edit_book_path(book) %></td>
          <td><%= link_to t('views.common.destroy'), book, method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books %>

<%= link_to t("views.common.top_page"), root_path %>
