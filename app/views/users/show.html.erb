<h1><%= @user.user_name %> My Page</h1>
<div class="user_card">
  <div class="user_card_profile_box">
    <div class="label_box">
      <div class="profile label" id="user_icon_label">アイコン</div>
      <div class="profile" id="icon"><%= image_tag @user.icon.variant(resize: "121x121") if @user.icon.attached? %></div>
    </div>
    <div class="label_box">
      <div class="profile label" id="user_name_label">名前</div>
      <div class="profile" id="user_name"><%= @user.user_name %></div>
    </div>
    <div class="label_box">
      <div class="profile label" id="user_addrress_label">住所</div>
      <div class="profile" id="user_addrress"><%= @user.address %></div>
    </div>
    <div class="label_box">
      <div class="profile label" id="user_email_label">Eメール</div>
      <div class="profile" id="user_email"><%= @user.email %></div>
    </div>
    <div class="label_box">
      <div class="profile label" id="user_introduction_label">自己紹介</div>
      <div class="profile" id="user_introduction"><%= @user.introduction %></div>
    </div>
  </div>
</div>
<h2>投稿済みの本</h2>
<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:memo) %></th>
      <th><%= Book.human_attribute_name(:author) %></th>
      <th><%= Book.human_attribute_name(:picture) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('views.common.show'), book %></td>
        <% if current_user.id == @user.id %>
          <td><%= link_to t('views.common.edit'), edit_book_path(book) %></td>
          <td><%= link_to t('views.common.destroy'), book, method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books %>

<%= link_to "トップページ", root_path %>
